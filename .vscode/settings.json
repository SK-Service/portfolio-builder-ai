{
  "python.defaultInterpreterPath": "./agents/python/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "88"],
  "java.project.sourcePaths": ["agents/java/src/main/java"],
  "java.project.referencedLibraries": ["agents/java/target/dependency/*.jar"],
  "typescript.preferences.importModuleSpecifier": "relative",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/target": true,
    "**/.firebase": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/.firebase": true,
    "**/dist": true
  }
}