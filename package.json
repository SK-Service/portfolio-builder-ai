{
  "name": "portfolio-builder-ai",
  "version": "1.0.0",
  "description": "Intelligent multi-agent portfolio builder",
  "private": true,
  "workspaces": [
    "frontend",
    "functions",
    "agents/python"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../functions && npm install",
    "dev:windows": "concurrently \"npm run dev:frontend\" \"npm run dev:functions\" \"npm run dev:agents\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:functions": "cd functions && npm run serve",
    "dev:agents": "cd agents/python && python -m uvicorn main:app --reload --port 8001",
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "cd frontend && npm run build -- --configuration production",
    "build:functions": "cd functions && npm run build",
    "test": "npm run test:frontend && npm run test:functions",
    "test:frontend": "cd frontend && npm run test -- --watch=false --browsers=ChromeHeadless",
    "test:functions": "cd functions && npm test",
    "lint": "npm run lint:frontend && npm run lint:functions",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:functions": "cd functions && npm run lint",
    "deploy:staging": "firebase deploy --only hosting,functions --project portfolio-builder-staging",
    "deploy:prod": "firebase deploy --only hosting,functions --project portfolio-builder-ai",
    "clean": "rimraf frontend/node_modules functions/node_modules node_modules",
    "setup:python": "cd agents/python && python -m venv .venv && .venv/Scripts/activate && pip install -r requirements.txt"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "portfolio",
    "ai",
    "agents",
    "finance",
    "angular",
    "firebase"
  ],
  "author": "Portfolio Builder AI",
  "license": "MIT",
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/config": "^4.0.2",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0"
  }
}
